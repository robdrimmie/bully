<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
 <description>The coding standard for Rob's coding sample project.</description>

 <file>app</file>
 <file>bootstrap</file>
 <file>config</file>
 <file>database</file>
 <file>routes</file>
 <file>tests</file>

 <exclude-pattern>*/database/*</exclude-pattern>

 <arg name="basepath" value="."/>
 <arg name="colors" />
 <arg name="parallel" value="75" />
 <arg value="np"/>

 <rule ref="PSR2"/>
</ruleset>